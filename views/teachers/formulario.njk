{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/teachers">
        <section 
            class="avatar" 
            style="background: url(https://source.unsplash.com/collection/332741/900x900) no-repeat center center / cover ">
        </section>

        <section class="details">
            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input 
                        type="url" 
                        name="avatar_url"
                        placeholder="http://minhaimagem.com"
                    >
                </div>
            </div>

            <div class="item">
                <div>Nome</div>
                <div>
                    <input 
                        type="text" 
                        name="name"
                        placeholder="Nome do Professor"
                    >
                </div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input 
                        type="date" 
                        name="birth"
                    >
                </div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>
                    <select name="degree">
                        <option value="EMC" selected>Ensino Medio Completo</option>
                        <option value="ESC">Ensino Superior Completo</option>
                        <option value="M">Mestrado</option>
                        <option value="DR">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    <span><input type="radio" name="type" value="P" checked>Presencial</span>
                    <span><input type="radio" name="type" value="D">À Distância</span>
                </div>
            </div>

            <div class="item">
                <div>Area de Atuação</div>
                <div>
                    <input 
                        type="text" 
                        name="subjects"
                        placeholder="Separe as matérias lecionadas por virgula"
                    >
                </div>
            </div>

            <button type="submit">Salvar</button>

        </section>
    </form>
    
{% endblock content %}